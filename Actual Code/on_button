from machine import Pin
from utime import sleep

# --- Set up LED pin ---
led_pin = 15          # adjust to your boardâ€™s LED GPIO
led = Pin(led_pin, Pin.OUT)

# --- Set up button pin ---
button_pin = 12       # the GPIO number your button is wired to
# PULL_DOWN keeps input LOW (0) when button is not pressed
button = Pin(button_pin, Pin.IN, Pin.PULL_DOWN)

# --- Loop: read button and set LED ---
while True:
    led.value(button.value())   # LED follows button
    sleep(0.1)
    print("Button:", button.value())
